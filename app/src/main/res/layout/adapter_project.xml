<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/project_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size6dp"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/cardview_default_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/project_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/size4dp"
            android:padding="@dimen/size4dp"
            android:text="Title"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background"
            android:textSize="@dimen/size16sp"
            android:textStyle="bold|italic" />

        <LinearLayout
            android:id="@+id/container_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/project_title"
            android:layout_margin="@dimen/size4dp"
            android:orientation="horizontal"
            android:padding="@dimen/size4dp">

            <TextView
                android:id="@+id/backers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/size4dp"
                android:text="Backers" />

            <TextView
                android:id="@+id/pledged_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/size4dp"
                android:text="Amount" />

        </LinearLayout>

        <TextView
            android:id="@+id/days_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/container_1"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/size4dp"
            android:gravity="center"
            android:padding="@dimen/size4dp"
            android:text="No of days" />


    </RelativeLayout>

</android.support.v7.widget.CardView>